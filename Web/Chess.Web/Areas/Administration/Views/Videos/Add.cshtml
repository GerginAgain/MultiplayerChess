@model AddVideoInputModel

<div class="row justify-content-center">
    <h3 class="text-dark">Add Video</h3>
</div>
<hr class="hr-chess"/>
<div class="row justify-content-center">
    <form class="col-md-4" asp-area="Administration" asp-controller="Videos" asp-action="Add" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="VideoTitle"></label>
            <input id="Title" asp-for="VideoTitle" class="form-control" />
            <span asp-validation-for="VideoTitle" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="VideoLink"></label>
            <input id="Link" asp-for="VideoLink" class="form-control" />
            <span asp-validation-for="VideoLink" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PictureName"></label>
            <input id="Link" asp-for="PictureName" class="form-control" />
            <span asp-validation-for="PictureName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PictureLink"></label>
            <input id="Link" asp-for="PictureLink" class="form-control" />
            <span asp-validation-for="PictureLink" class="text-danger"></span>
        </div>
        <hr />
        <input id="button" type="submit" class="btn btn-primary" value="Add video" />
    </form>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}