@using System.Globalization
@model GameDetailsViewModel
@{ ViewData["Title"] = "Game details"; }

<h1 class="text-center">Game details</h1>
<ul class="list-group">
    <li class="offset-3 col-6 mt-5 list-group-item list-group-item-success rounded">
        <i class="fas fa-file-alt"></i> <strong>Game name:</strong> <span class="text-muted">@Model.Name</span> 
    </li>
    <li class="offset-3 col-6 mt-3 list-group-item list-group-item-success rounded">
        <i class="far fa-calendar-alt"></i> <strong>Created on:</strong> <span class="text-muted">@Model.CreatedOn.ToString("F", CultureInfo.InvariantCulture)</span>
    </li>
    <li class="offset-3 col-6 mt-3 list-group-item list-group-item-success rounded">
        <i class="fas fa-id-card-alt"></i> <strong>Creater username:</strong> <span class="text-muted">@Model.HostUsername</span>
    </li>
    <li class="offset-3 col-6 mt-3 list-group-item list-group-item-success rounded">
        <i class="fas fa-palette"></i> <strong>Creater figures color:</strong> <span class="text-muted">@Model.HostFiguresColor</span>
    </li>
    <li class="offset-3 col-6 mt-3 list-group-item list-group-item-success rounded">
        <i class="fas fa-wifi"></i> <strong>Creater connection Id:</strong> <span class="text-muted">@Model.HostConnectionId</span>
    </li>
</ul>
