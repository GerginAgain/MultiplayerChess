@using System.Web
@model GameDetailsViewModel
@{ ViewData["Title"] = "Game details"; }

<div class="row">
    <div class="offset-2 col-8 mt-3">
        <h3 class="">Game name: @Model.Name</h3>
    </div>
</div>
<div class="row">
    <div class="offset-2 col-8 mt-2">
        <hr class="hr-sell-me" />
        <h3>Created on: @Model.CreatedOn.ToString("D")</h3>
    </div>
</div>
<div class="row">
    <div class="offset-2 col-4 mt-2">
        <h5 class="text-muted">Creater username: @Model.HostUsername</h5>
    </div>
</div>
<div class="row">
    <div class="offset-2 col-4 mt-2">
        <h5 class="text-muted">Creater figures color: @Model.HostFiguresColor</h5>
    </div>
</div>
<div class="row">
    <div class="offset-2 col-4 mt-2">
        <h5 class="text-muted">Creater connection Id: @Model.HostConnectionId</h5>
    </div>
</div>
