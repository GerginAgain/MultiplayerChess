@using Chess.Web.ViewModels.ViewModels.Moves;
@model List<MoveViewModel>

<h2 class="text-center text-primary mb-3">Game moves:</h2>
<div class="row justify-content-center">
    <div class="col-md-6">
        <hr class="hr-chess" />
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-md-6">
        <ul class="list-group">
            @foreach (var move in Model)
            {
                <li class="list-group-item m-1 p-1 border border-warning">
                    <span class="text-primary">@move.CreatedOn</span> @move.Title
                </li>
            }
        </ul>
    </div>   
</div>